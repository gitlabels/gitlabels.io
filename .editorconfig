; Editors Configuration
; See http://editorconfig.org/ for more information.

# top-most EditorConfig file
root = true

; Defaults
[*]
indent_style = space
indent_size = 2
insert_final_newline = true

; C# Source Code
[*.cs]
indent_style = space
indent_size = 4
insert_final_newline = true

; JSON files
[*.json]
indent_style = space
indent_size = 2

; Markdown files
[*.md]
indent_style = space
insert_final_newline = false
